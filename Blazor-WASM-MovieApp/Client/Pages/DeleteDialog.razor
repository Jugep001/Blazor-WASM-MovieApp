
<MudDialog Style="@("background: #1f1e1e")" Class="text-white">
    <DialogContent>
        <MudText Class="text-white">Do you want to delete this movie?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary"  OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Delete</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}