@page "/Register"
@using Blazor_WASM_MovieApp.Client.Pages.BaseComponents
@using Blazored.FluentValidation
@inherits RegisterBase

<div class="center">
    <div class="col-md-4">
        <EditForm Model="authInput" OnValidSubmit="AddUser">
           @* <FluentValidationValidator />*@
            <div>
                <h3 class="ms-3">Create a new account</h3>
            </div>

            <hr />
            <div class="form-floating">
                <InputText @bind-Value="authInput.Username" class="form-control" autocomplete="username" />
                <ValidationMessage For="() => authInput.Username" />
                <label>Username</label>

            </div>
            <div class="form-floating">
                <InputText @bind-Value="authInput.Email" class="form-control" autocomplete="email" />
                <ValidationMessage For="() => authInput.Email" />
                <label>Email</label>

            </div>
            <div class="form-floating">
                <InputText @bind-Value="authInput.PhoneNumber" class="form-control" autocomplete="phoneNumber" />
                <ValidationMessage For="() => authInput.PhoneNumber" />
                <label>PhoneNumber</label>

            </div>
            <div class="form-floating">
                <InputText type="password" @bind-Value="authInput.Password" class="form-control" autocomplete="new-password" />
                <ValidationMessage For="() => authInput.Password" />
                <label>Password</label>

            </div>
            <div class="form-floating">
                <InputText type="password" @bind-Value="authInput.ConfirmPassword" class="form-control" autocomplete="new-password" />
                <ValidationMessage For="() => authInput.ConfirmPassword" />
                <label>Confirm Password</label>

            </div>
            <div class="form-floating">
                <InputSelect @bind-Value="Role" class="form-control">
                    <option value="reader" selected>Reader</option>
                    <option value="writer">Writer</option>
                </InputSelect>
                <label>Role</label>
            </div>
            <div class="d-flex mt-3">
                <input type="submit" value="Register" class="btn btn-primary" />
                <a href="/" type="submit" class="w-50 btn btn-lg btn-danger">Cancel</a>
            </div>
        </EditForm>
    </div>

</div>

