@page "/genreIndex"
@using Blazor_WASM_MovieApp.Models
@using Blazor_WASM_MovieApp.Client.Pages.BaseComponents
@inherits GenreIndexBase

<div class="table-responsive pt-lg-5  ">

    <div class="pl-2 ">
        <div class="float-start mt-2">
            <a class="btn btn-primary" href="createGenre">Add Genre</a>
        </div>

        <EditForm Model="searchGenre" OnSubmit="HandleSubmit">
            <div class="d-flex float-end mt-2 p-1">

                <div>

                    <InputText type="text" class="form-control" name="searchString" placeholder="Genre" @bind-Value="searchGenre.SearchString" />

                </div>

                <input type="submit" value="Search" class="btn btn-secondary" />

            </div>

        </EditForm>
        <br />
        <br />
    </div>


    <table class="table table-hover table-striped bg-white">
        <thead class="table-dark">
            <tr>
                <th>
                    Name
                </th>

                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (genres != null)
            {
                @foreach (Genre genre in genres)
                {
                    <tr>
                        <td>
                            @genre.Name
                        </td>

                        <td>

                            <div class="span2">

                                <a class="btn btn-outline-primary" href="editGenre/@genre.Id">Edit</a>
                                <a class="btn btn-outline-primary" href="deleteGenre/@genre.Id">Delete</a>

                            </div>

                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

