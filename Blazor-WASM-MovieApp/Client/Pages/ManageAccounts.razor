@page "/ManageAccounts"
@using Blazor_WASM_MovieApp.Client.Pages.BaseComponents
@inherits ManageAccountsBase

<table class="table table-hover table-striped bg-white">
    <thead class="table-dark">
        <tr>
            <th>
                Username
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Users == null)
        {
            <p>Loading...</p>
        }
        else
        {
            @foreach (var user in Users)
            {
                <tr>
                    <td>
                        @user.UserName
                    </td>

                    <td>

                        <div class="span2">

                            <a class="btn btn-outline-primary" href="EditUser/@user.Id"> Edit </a>
                            <a class="btn btn-outline-danger" href="DeleteUser/@user.Id"> Delete </a>

                        </div>

                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<div class="d-flex">
    <a class="btn btn-primary ms-2 me-2" href="/Register">Add User</a>
    <a class="btn btn-danger" href="/">Cancel</a>
</div>

