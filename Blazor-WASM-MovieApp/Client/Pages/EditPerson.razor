@page "/editPerson/{Id:int}"
@using Blazor_WASM_MovieApp.Models
@using Blazor_WASM_MovieApp.Client.Pages.BaseComponents
@using Blazored.FluentValidation
@inherits EditPersonBase

<h1 class="text-center">Edit Person</h1>
<hr />

@if (isErrorActive)
{
    <div class="alert alert-danger" role="alert">

        <ul class="list-unstyled">
            @foreach (var err in ErrorList)
            {
                <li>

                    <p>@err.ErrorMessage</p>

                </li>

            }
        </ul>

    </div>
}

<div class="container-fluid d-flex justify-content-center">
    <MudPaper Style="@("background: #FFFFFF")" Class="py-16 d-inline-flex justify-content-center" Width="75%">

        <div class="col-md-4 ">
            <EditForm Model="person" OnValidSubmit="UpdatePerson">
                <FluentValidationValidator />

                <div class="form-group mt-3">

                    <MudTextField @bind-Value="person.Vorname" Label="First Name" Variant="Variant.Filled" />
                    <ValidationMessage For="() => person.Vorname" />

                </div>

                <div class="form-group mt-3">

                    <MudTextField @bind-Value="person.Name" Label="Last Name" Variant="Variant.Filled" />
                    <ValidationMessage For="() => person.Name" />

                </div>

                <div class="form-group mt-3">

                    <MudButton ButtonType="MudBlazor.ButtonType.Submit" Variant="Variant.Filled" Color="MudBlazor.Color.Primary">Save</MudButton>
                    <MudButton Variant="Variant.Filled" Color="MudBlazor.Color.Error" @onclick="@Cancel">Cancel</MudButton>

                </div>

            </EditForm>

        </div>

    </MudPaper>
</div>

